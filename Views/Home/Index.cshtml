@{
    ViewData["Title"] = "PM Suite - Profesjonalne zarządzanie projektami";
}

<style>
    :root {
        --accent: #0d6efd;
        --accent-dark: #0a58ca;
        --success: #198754;
        --warning: #ffc107;
        --danger: #dc3545;
        --muted: #6c757d;
        --light-bg: #f8f9fa;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .hero {
        background: linear-gradient(135deg, rgba(13,110,253,0.1), rgba(13,202,240,0.05));
        padding: 4rem 0;
        position: relative;
        overflow: hidden;
    }

        .hero::before {
            content: "";
            position: absolute;
            top: -50%;
            right: -20%;
            width: 600px;
            height: 600px;
            background: radial-gradient(circle, rgba(13,110,253,0.1), transparent);
            border-radius: 50%;
        }

    .hero-content {
        position: relative;
        z-index: 1;
    }

    .feature-card {
        border-radius: 1rem;
        box-shadow: 0 4px 16px rgba(15,23,42,0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid rgba(0,0,0,0.05);
        height: 100%;
    }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 24px rgba(15,23,42,0.12);
        }

    .stat-card {
        background: white;
        border-radius: 1rem;
        padding: 1.5rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
    }

        .stat-card:hover {
            box-shadow: 0 4px 16px rgba(0,0,0,0.1);
        }

    .stat-number {
        font-weight: 700;
        font-size: 2.5rem;
        line-height: 1;
        background: linear-gradient(135deg, var(--accent), var(--accent-dark));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .timeline-step {
        position: relative;
        padding-left: 3.5rem;
        margin-bottom: 2rem;
    }

        .timeline-step::before {
            content: "";
            position: absolute;
            left: 1rem;
            top: 0.4rem;
            width: 1rem;
            height: 1rem;
            border-radius: 50%;
            background: var(--accent);
            box-shadow: 0 0 0 4px rgba(13,110,253,0.1);
        }

        .timeline-step::after {
            content: "";
            position: absolute;
            left: 1.4rem;
            top: 1.8rem;
            width: 2px;
            height: calc(100% + 1rem);
            background: linear-gradient(180deg, var(--accent), transparent);
        }

        .timeline-step:last-child::after {
            display: none;
        }

    .icon-box {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.75rem;
        background: linear-gradient(135deg, var(--accent), var(--accent-dark));
        color: white;
        box-shadow: 0 4px 12px rgba(13,110,253,0.3);
    }

    .pricing-card {
        border-radius: 1rem;
        border: 2px solid #e9ecef;
        transition: all 0.3s ease;
        height: 100%;
    }

        .pricing-card:hover {
            border-color: var(--accent);
            box-shadow: 0 8px 24px rgba(13,110,253,0.15);
        }

        .pricing-card.featured {
            border-color: var(--accent);
            box-shadow: 0 8px 32px rgba(13,110,253,0.2);
            transform: scale(1.05);
        }

    .team-member {
        text-align: center;
        transition: transform 0.3s ease;
    }

        .team-member:hover {
            transform: translateY(-8px);
        }

        .team-member img {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border: 4px solid white;
            box-shadow: 0 4px 16px rgba(0,0,0,0.1);
        }

    .cta-section {
        background: linear-gradient(135deg, var(--accent), var(--accent-dark));
        color: white;
        padding: 4rem 0;
        border-radius: 1.5rem;
        position: relative;
        overflow: hidden;
    }

        .cta-section::before {
            content: "";
            position: absolute;
            top: -50%;
            right: -10%;
            width: 400px;
            height: 400px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
        }

    .badge-custom {
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        font-weight: 600;
        font-size: 0.875rem;
    }

    .testimonial-card {
        background: white;
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 4px 16px rgba(0,0,0,0.06);
        height: 100%;
    }

    .progress-custom {
        height: 8px;
        border-radius: 1rem;
        background: #e9ecef;
    }

        .progress-custom .progress-bar {
            border-radius: 1rem;
        }

    {
