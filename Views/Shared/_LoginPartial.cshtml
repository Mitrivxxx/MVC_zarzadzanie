@using System.Security.Claims

@if (User.Identity?.IsAuthenticated == true)
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
            Witaj, @User.Identity.Name (@User.FindFirstValue(ClaimTypes.Role))
        </a>
        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            <li>
                <form asp-controller="Account" asp-action="Logout" method="post" class="px-3">
                    <button type="submit" class="btn btn-link text-decoration-none text-dark">Wyloguj</button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Login">Zaloguj</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Register">Zarejestruj</a>
    </li>
}