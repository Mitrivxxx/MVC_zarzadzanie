<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyMvcPostgresApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyMvcPostgresApp.styles.css" asp-append-version="true" />
    <style>
        .notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            padding: 2px 6px;
            border-radius: 50%;
            font-size: 10px;
            font-weight: bold;
        }
        .notification-icon {
            position: relative;
            display: inline-block;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MyMvcPostgresApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            var role = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value;

                            <!-- Link do Moich Projektów - dla wszystkich zalogowanych -->
                            <li class="nav-item me-3">
                                <a class="nav-link text-dark" asp-controller="MyProjects" asp-action="Index">
                                    <i class="bi bi-folder-fill"></i> Moje Projekty
                                </a>
                            </li>

                            <!-- Powiadomienia -->
                            <li class="nav-item me-3">
                                <a class="nav-link text-dark notification-icon" asp-controller="Notifications" asp-action="Index" id="notificationLink">
                                    <i class="bi bi-bell-fill"></i> Powiadomienia
                                    <span class="badge bg-danger notification-badge d-none" id="notificationBadge">0</span>
                                </a>
                            </li>

                            @if (role == "Admin")
                            {
                                <li class="nav-item dropdown me-3">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-shield-lock"></i> Zarządzaj
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="adminDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Users">
                                                <i class="bi bi-people-fill me-2"></i>Użytkownicy
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider" /></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Projects" asp-action="Index">
                                                <i class="bi bi-kanban-fill me-2"></i>Projekty
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Details">Konto</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger">Wyloguj</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Zaloguj</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Zarejestruj</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="py-4 border-top mt-5">
        <div class="container d-flex justify-content-between align-items-center">
            <div>
                <strong>PM Suite</strong>
                <div><small>© 2025 PM Suite. Wszelkie prawa zastrzeżone.</small></div>
            </div>
            <div class="text-end">
                <small class="d-block">Kontakt: hello@pmsuite.example</small>
                <small>Polityka prywatności</small>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @if (User.Identity?.IsAuthenticated == true)
    {
        <script>
            // Pobierz liczbę nieprzeczytanych powiadomień
            async function updateNotificationBadge() {
                try {
                    const response = await fetch('/Notifications/GetUnreadCount');
                    const data = await response.json();
                    const badge = document.getElementById('notificationBadge');

                    if (data.count > 0) {
                        badge.textContent = data.count;
                        badge.classList.remove('d-none');
                    } else {
                        badge.classList.add('d-none');
                    }
                } catch (error) {
                    console.error('Error fetching notification count:', error);
                }
            }

            // Zaktualizuj badge przy załadowaniu strony
            document.addEventListener('DOMContentLoaded', updateNotificationBadge);

            // Opcjonalnie: odświeżaj co 30 sekund
            setInterval(updateNotificationBadge, 30000);
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>