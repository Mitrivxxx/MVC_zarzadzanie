@model MyMvcPostgresApp.ViewModels.EditProjectViewModel

@{
    ViewData["Title"] = "Edytuj projekt";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="d-flex align-items-center mb-4">
            <a asp-controller="Projects" asp-action="Index" class="btn btn-outline-secondary me-3">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h2 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Edytuj projekt</h2>
                <p class="text-muted mb-0">Zaktualizuj informacje o projekcie</p>
            </div>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="card shadow-sm">
            <div class="card-body p-4">
                <form asp-action="Edit" asp-controller="Projects" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-4">
                        <label asp-for="Name" class="form-label fw-semibold">
                            <i class="bi bi-pencil me-1"></i>Nazwa projektu
                        </label>
                        <input asp-for="Name" class="form-control form-control-lg" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label fw-semibold">
                            <i class="bi bi-file-text me-1"></i>Opis
                        </label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="StartDate" class="form-label fw-semibold">
                                <i class="bi bi-calendar-check me-1"></i>Data rozpoczęcia
                            </label>
                            <input asp-for="StartDate" type="date" class="form-control" />
                            <span asp-validation-for="StartDate" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="EndDate" class="form-label fw-semibold">
                                <i class="bi bi-calendar-x me-1"></i>Data zakończenia
                            </label>
                            <input asp-for="EndDate" type="date" class="form-control" />
                            <span asp-validation-for="EndDate" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-flag-fill me-1"></i>Status
                        </label>
                        <div class="row g-2">
                            <div class="col-md-6">
                                <div class="form-check p-3 border rounded">
                                    <input class="form-check-input" type="radio" asp-for="Status" value="Active" id="statusActive" />
                                    <label class="form-check-label w-100 ms-2" for="statusActive">
                                        <div class="fw-semibold text-success">Active</div>
                                        <small class="text-muted">Projekt w trakcie realizacji</small>
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check p-3 border rounded">
                                    <input class="form-check-input" type="radio" asp-for="Status" value="OnHold" id="statusOnHold" />
                                    <label class="form-check-label w-100 ms-2" for="statusOnHold">
                                        <div class="fw-semibold text-warning">OnHold</div>
                                        <small class="text-muted">Projekt wstrzymany</small>
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check p-3 border rounded">
                                    <input class="form-check-input" type="radio" asp-for="Status" value="Completed" id="statusCompleted" />
                                    <label class="form-check-label w-100 ms-2" for="statusCompleted">
                                        <div class="fw-semibold text-primary">Completed</div>
                                        <small class="text-muted">Projekt zakończony</small>
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check p-3 border rounded">
                                    <input class="form-check-input" type="radio" asp-for="Status" value="Cancelled" id="statusCancelled" />
                                    <label class="form-check-label w-100 ms-2" for="statusCancelled">
                                        <div class="fw-semibold text-danger">Cancelled</div>
                                        <small class="text-muted">Projekt anulowany</small>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Status" class="text-danger small"></span>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-success btn-lg flex-grow-1">
                            <i class="bi bi-check-lg me-2"></i>Zapisz zmiany
                        </button>
                        <a asp-action="Index" asp-controller="Projects" class="btn btn-outline-secondary btn-lg">
                            Anuluj
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}