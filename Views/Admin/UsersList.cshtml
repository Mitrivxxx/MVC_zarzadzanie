@model IEnumerable<MyMvcPostgresApp.Models.User>

<h2>Lista użytkowników</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form method="get" asp-controller="Admin" asp-action="Users" class="row g-2 mb-3">
    <div class="col-md-4">
        <input type="text"
               name="login"
               value="@(ViewData["LoginFilter"] as string)"
               class="form-control"
               placeholder="Login zawiera..." />
    </div>
    <div class="col-md-3">
        <select name="role" class="form-select">
            <option value="">Wszystkie role</option>
            @foreach (var r in (IEnumerable<string>)(ViewBag.Roles ?? new List<string>()))
            {
                var selected = string.Equals((string?)ViewData["RoleFilter"], r, StringComparison.Ordinal) ? "selected" : "";
                <option value="@r" selected="@selected">@r</option>
            }
        </select>
    </div>
    <div class="col-md-5">
        <button type="submit" class="btn btn-primary me-2">Filtruj</button>
        <a class="btn btn-outline-secondary" asp-controller="Admin" asp-action="Users">Wyczyść</a>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Login</th>
            <th>Rola</th>
            <th>Data utworzenia</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Login</td>
                <td>@user.Role</td>
                <td>@user.CreatedAt.ToString("dd.MM.yyyy")</td>
                <td>
                    <a class="btn btn-sm btn-outline-primary" asp-controller="Admin" asp-action="Edit" asp-route-id="@user.Id">Edytuj</a>
                </td>
            </tr>
        }
    </tbody>
</table>
