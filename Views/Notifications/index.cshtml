@model IEnumerable<MyMvcPostgresApp.Models.Notification>

@{
    ViewData["Title"] = "Powiadomienia";
    var unreadCount = Model.Count(n => !n.IsRead);
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="mb-0"><i class="bi bi-bell-fill me-2"></i>Powiadomienia</h2>
                <p class="text-muted mb-0">
                    @if (unreadCount > 0)
                    {
                        <span class="badge bg-danger">@unreadCount nieprzeczytanych</span>
                    }
                    else
                    {
                        <span>Wszystkie powiadomienia przeczytane</span>
                    }
                </p>
            </div>
            @if (unreadCount > 0)
            {
                <form asp-action="MarkAllAsRead" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="bi bi-check-all me-1"></i>Oznacz wszystkie jako przeczytane
                    </button>
                </form>
            }
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (Model.Any())
        {
            <div class="list-group shadow-sm">
                @foreach (var notification in Model)
                {
                    var bgClass = notification.IsRead ? "bg-white" : "bg-light";
                    var iconClass = notification.Type switch
                    {
                        "Success" => "bi-check-circle-fill text-success",
                        "Warning" => "bi-exclamation-triangle-fill text-warning",
                        "Danger" => "bi-x-circle-fill text-danger",
                        _ => "bi-info-circle-fill text-primary"
                    };

                    <div class="list-group-item @bgClass">
                        <div class="d-flex w-100 justify-content-between align-items-start">
                            <div class="d-flex align-items-start flex-grow-1">
                                <i class="bi @iconClass fs-4 me-3 mt-1"></i>
                                <div class="flex-grow-1">
                                    <p class="mb-2 @(!notification.IsRead ? "fw-semibold" : "")">
                                        @notification.Message
                                    </p>
                                    <small class="text-muted">
                                        <i class="bi bi-clock me-1"></i>@notification.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                    </small>
                                    @if (notification.Project != null)
                                    {
                                        <div class="mt-2">
                                            <a asp-controller="MyProjects"
                                               asp-action="Details"
                                               asp-route-id="@notification.ProjectId"
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye me-1"></i>Zobacz projekt
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="d-flex gap-1 ms-3">
                                @if (!notification.IsRead)
                                {
                                    <form asp-action="MarkAsRead" asp-route-id="@notification.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-success" title="Oznacz jako przeczytane">
                                            <i class="bi bi-check"></i>
                                        </button>
                                    </form>
                                }
                                <form asp-action="Delete" asp-route-id="@notification.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Usuń">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="card shadow-sm">
                <div class="card-body text-center py-5">
                    <i class="bi bi-bell-slash fs-1 text-muted d-block mb-3"></i>
                    <h5 class="text-muted">Brak powiadomień</h5>
                    <p class="text-muted mb-0">Nie masz żadnych powiadomień</p>
                </div>
            </div>
        }
    </div>
</div>